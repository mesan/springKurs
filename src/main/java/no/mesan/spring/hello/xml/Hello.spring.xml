<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	                    
    <bean id="greeter" 
         class="no.mesan.spring.hello.xml.Greeter">
        <property name="formatter" ref="xmlFormatter"/>
    </bean>

    <bean id="htmlFormatter" class="no.mesan.spring.hello.xml.HtmlFormatter"/>
    <bean id="textFormatter"  class="no.mesan.spring.hello.xml.TextFormatter"/>
    <bean id="xmlFormatter" class="no.mesan.spring.hello.xml.XmlFormatter"/>

</beans>
